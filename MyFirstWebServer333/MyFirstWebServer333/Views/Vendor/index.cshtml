<h1> Create Vendor</h1>

<div>
    <div>
        <h3 class="widget-heading">Create Vendor</h3>
        <form
            asp-controller="Vendor"
            asp-action="Create">
            <div class="mb-2">
                <input type="text"
                       class="form-control" name="name" placeholder="Enter vendor name">
            </div>
            <div class="mb-2">
                <input type="text"
                       class="form-control" name="country" placeholder="Enter vendor country">
            </div>
            <div class="mb-2">
                <input type="text"
                       class="form-control" name="email" placeholder="Enter vendor email">
            </div>
            <div class="mb-2">
                <input type="submit" value="Save">
            </div>
            
        </form>
    </div>
</div>